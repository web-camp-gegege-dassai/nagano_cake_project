<h4 class="bg-light mt-5 ml-5 px-5 w-25 text-center">注文履歴一覧</h4>

<table class="table w-75 mt-5 mx-auto">
  <thead>
    <tr class="bg-light">
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @order_details.each do |order_detail| %>
      <tr>
          <td>
          <u>
            <%=link_to admin_order_path(order_detail.id) do %>
              <%= order_detail.created_at.to_s(:datetime_jp) %>
            <% end %>
          </u>
          </td>
          <td>
            <%= order_detail.order.customer.last_name %>
            <%= order_detail.order.customer.first_name %>
          </td>
          <td><%= order_detail.amount %></td>
          <td><%= order_detail.order.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @order_details %>