<h4 class="bg-light mt-5 ml-5 px-5 w-25 text-center">注文履歴一覧</h4>

<!--以下注文詳細機能完成後、確認-->

<table class="table w-75 mt-5 mx-auto">
  <thead>
    <tr class="bg-light">
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @order_details.each do |order_detail| %>
      <tr>
        <%=link_to admin_order_path(order.id) do %>
          <td><%= order_detail.created_at %></td>
        <% end %>
          <td><%= order_detail.order.name %></td>
          <td><%= order_detail.amount %></td>
          <td><%= order.item.is_active %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @order_details %>