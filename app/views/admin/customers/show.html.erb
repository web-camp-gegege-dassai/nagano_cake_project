<h3 class="bg-light m-5 px-25 w-25 text-center"><%= @customer.name %>さんの会員詳細</h3>

  <%= form_with model:@customer, local:true do |f| %><br>
    <div class="form-group">
      <%= f.label "会員ID" %>
      <%= @customer.id %>
    </div>
    <div class="form-group">
      <%= f.label "氏名" %>
      <%= @customer.last_name %><%= @customer.first_name %>
    </div>
    <div class="form-group">
      <%= f.label "フリガナ" %>
      <%= @customer.last_name_kana %><%= @customer.first_name_kana %>
    </div>
    <div class="form-group">
      <%= f.label "郵便番号" %>
      <%= @customer.postal_code %>
    </div>
    <div class="form-group">
      <%= f.label "住所" %>
      <%= @customer.address %>
    </div>
    <div class="form-group">
      <%= f.label "電話番号" %>
      <%= @customer.telephone_number %>
    </div>
    <div class="form-group">
      <%= f.label "メールアドレス" %>
      <%= @customer.email %>
    </div>
    <div class="form-group">
      <%= f.label "会員ステータス" %>
      <%= @customer.is_deleted %>
    </div>
　<% end %>
　<%= link_to "編集する", edit_admin_customer_path(@customer.id), class: 'btn btn-success' %>
　<%#= link_to "注文履歴一覧を見る", class: 'btn btn-primary' %>
