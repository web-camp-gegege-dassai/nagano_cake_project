<h3><%= @customer.name %>さんの会員情報編集</h3>
<% if @customer.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2><%= @customer.errors.count %>Save failed due to an error.</h2>
    <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model:@customer, url:'/customers', local:true do |f| %>
  <div class="form-group">
    <%= f.label "氏名" %>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
  </div>
  <div class="form-group">
    <%= f.label "フリガナ" %>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>
  <div class="form-group">
    <%= f.label "郵便番号" %>
    <%= f.text_field :postal_code %>
  </div>
  <div class="form-group">
    <%= f.label "住所" %>
    <%= f.text_area :address %>
  </div>
  <div class="form-group">
    <%= f.label "電話番号" %>
    <%= f.text_field :telephone_number %>
  </div>
    </div>
  <div class="form-group">
    <%= f.label "メールアドレス" %>
    <%= f.text_field :email %>
  </div>
  <div class="form-group">
    <%= f.label "会員ステータス" %>
    <label><%= f.radio_button :is_deleted, "true" %>有効</label>
    <label><%= f.radio_button :is_deleted, "false" %>退会</label>
  </div>
  <div class="form-group">
    <%= f.submit '変更を保存', class: 'btn btn-success' %>
  </div>
<%end%>