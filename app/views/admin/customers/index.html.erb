<h3>会員一覧</h3>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= link_to customer.id %></td>
        <td><%= link_to customer.name %></td>
        <td><%= link_to customer.email %></td>
        <td><%= link_to item.is_deleted %></td>
      </tr>
    <%end%>
    <%= paginate @customers %>
  </tbody>
</table>
