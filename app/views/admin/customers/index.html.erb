<h3 class="bg-light m-10 px-25 w-25 text-center">会員一覧</h3>

<div class="container">
  <div class="row">
　　<table class='table table-hover table-inverse'>
  　　<thead>
    　　<tr>
      　　<th>会員ID</th>
      　　<th>氏名</th>
      　　<th>メールアドレス</th>
      　　<th>ステータス</th>
    　　</tr>
  　　</thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer) %></td>
            <td><%= customer.email %></td>
            <td><%= customer.is_deleted = :有効 %></td>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>
</div>
<div class="text-center">
  <%= paginate @customers %>
</div>