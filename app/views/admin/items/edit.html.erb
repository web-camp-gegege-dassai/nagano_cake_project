<div class="bg-light m-10 px-25 w-25 text-center">
  <h3>商品編集</h3>
</div>

<% if @item.errors.any? %>
<div id="error_explanation" class="alert alert-danger">
    <h2><%= @item.errors.count %>Save failed due to an error.</h2>
    <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
</div>
<% end %>

<div class="container">

  <%= form_with model:@item, url: admin_item_path(@item.id), local:true do |f| %>
    <div class='row mb-1'>
      <div class="col-lg-2">  
        <p>商品画像</p>
      </div>
      <div class="col-lg-2">
        <%= f.attachment_field :image %>
      </div>
    </div>

    <div class='row mb-1'>
      <div class="col-lg-2">  
        <p>商品名</p>
      </div>
      <div class="col-lg-2">
        <%= f.text_field :name %>
      </div>
    </div>

    <div class='row mb-1'>
      <div class="col-lg-2">  
        <p>商品説明</p>
      </div>
      <div class="col-lg-2">
        <%= f.text_area :introduction %>
      </div>
    </div>

    <div class='row mb-1'>
      <div class="col-lg-2">  
        <p>ジャンル</p>
      </div>
      <div class="col-lg-2">
        <%= f.collection_select(:genre_id, @genres, :id, :name) %>
      </div>
    </div>
    
    <div class='row mb-1'>
      <div class="col-lg-2">  
        <p>税抜価格</p>
      </div>
      <div class="col-lg-6">
        <label><%= f.text_field :price, placeholder: "1000", class: 'money' %>円</label>
      </div>
    </div>

    <div class='row mb-1'>
      <div class="col-lg-2">  
        <p>販売ステータス</p>
      </div>
      <div class="col-lg-6">
     　　<label><%= f.radio_button :is_active, :false %>販売中</label>
    　　<label><%= f.radio_button :is_active, :true %>販売停止中</label>
      </div>
    </div>
  <div class="form-group text-center">
    <%= f.submit '変更を保存', class: 'btn btn-success' %>
  </div>
</div>
<% end %>