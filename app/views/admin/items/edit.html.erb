<h3>商品編集</h3>
<% if @item.errors.any? %>
<div id="error_explanation" class="alert alert-danger">
    <h2><%= @item.errors.count %>Save failed due to an error.</h2>
    <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
</div>
<% end %>
<%= form_with model:@item, url:'/items', local:true do |f| %>
  <div class="form-group">
    <%= f.label "商品画像" %>
    <%= f.attachment_field :image, class: 'form-control item_image' %>
  </div>
  <div class="form-group">
    <%= f.label "商品名" %>
    <%= f.text_field :name, class: 'form-control item_name' %>
  </div>
  <div class="form-group">
    <%= f.label "商品説明" %>
    <%= f.text_area :introduction, class: 'form-control item_introduction' %>
  </div>
  <div class="form-group">
    <%= f.label "ジャンル" %>
  </div>
  <div class="form-group">
    <%= f.label "税抜価格" %>
    <label><%= f.text_field :price, placeholder: "1000", class: 'money' %>円</label>
  </div>
  <div class="form-group">
    <%= f.label "販売ステータス" %>
    <label><%= f.radio_button :is_active, "true" %>販売中</label>
    <label><%= f.radio_button :is_active, "false" %>販売停止中</label>
  </div>
  <div class="form-group">
    <%= f.submit '変更を保存', class: 'btn btn-success' %>
  </div>
<%end%>