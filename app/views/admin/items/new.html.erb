<div class="bg-light m-5 px-25 w-25 text-center">
  <h3>商品新規登録</h3>
</div>

<div class='container'>
  <%= form_with model:@item, url:'/admin/items', local:true do |f| %>
  <div class='row mb-1'>
    <div class="col-lg-2">
      <p>商品画像</p>
    </div>
    <div class="col-lg-2">
      <%= f.attachment_field :image %>
    </div>
  </div>
      
  <div class='row mb-1'>
    <div class="col-lg-2">
      <p>商品名</p>
    </div>
    <div class="col-lg-2">
      <%= f.text_field :name, placeholder: "商品名" %>
    </div>
  </div>
      
  <div class='row mb-1'>
    <div class="col-lg-2">
      <p>商品説明</p>
    </div>
    <div class="col-lg-2">
      <%= f.text_area :introduction, placeholder: "ここに説明文を記述しましす" %>
    </div>
  </div>
      
  <div class='row mb-1'>
    <div class="col-lg-2">
      <p>ジャンル</p>
    </div>
    <div class="col-lg-2">
      <%= f.collection_select(:genre_id, @genres, :id, :name, {prompt: "--選択してください--"}) %>
    </div>
  </div>
      
  <div class='row mb-1'>
    <div class="col-lg-2">
      <p>税抜価格</p>
    </div>
    <div class="col-lg-4">
      <label><%= f.text_field :price, placeholder: "1000", class: 'money' %>円</label>
    </div>
  </div>
      
  <div class='row mb-1'>
    <div class="col-lg-2">
      <p>販売ステータス</p>
    </div>
    <div class="col-lg-2">
      <label><%= f.radio_button :is_active, :true %>販売中</label>
      <label><%= f.radio_button :is_active, :false %>販売停止中</label>
     </div>
  </div>
      
  <div class='row mb-1'>
    <div class="col-lg-2">
      <p></p>
    </div>
    <div class="col-lg-2">
      <%= f.submit '新規登録', class: 'btn btn-success' %>
  </div>
  <% end %>
</div>
