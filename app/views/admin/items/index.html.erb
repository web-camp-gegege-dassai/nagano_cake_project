<h3>商品一覧</h3>

<!--商品新規登録-->


<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.id %></td>
        <td><%= link_to item.name %></td>
        <td></td>
        <td></td>
        <td><%= link_to item.is_active %></td>
      </tr>
    <%end%>
  </tbody>
</table>
