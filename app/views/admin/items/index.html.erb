<div class="container-fluid">
  <div class="row pb-5">
    <div class="bg-light px-25 w-25 text-center">
      <h3>商品一覧</h3>
    </div>
    <!--商品新規登録-->
    <div class="offset-8">
      <%= link_to new_admin_item_path(@items) do %>
      <i class="fas fa-plus-circle fa-3x size"></i>
      <% end %>
    </div>
  </div>

  <div class="row" style="margin: 0 70px;">
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item) %></td>
            <td><%= number_to_currency(item.price, unit: "", format: "%n%u", strip_insignificant_zeros: true) %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_active == true %>
                <p>販売中</p>
              <% else %>
                <p>販売停止中</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
   </table>
  </div>
</div>

  <div class='row'>
    <div class="offset-5 text-center">
      <%= paginate @items %>
    </div>
  </div>

