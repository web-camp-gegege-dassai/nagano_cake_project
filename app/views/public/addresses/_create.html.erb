<%= form_with model: address, local:true, class: "col-12"  do |f| %>
  <div class="form-group">

    <%= f.label :郵便番号（ハイフンなし）, class: "col-4" %>
    <%= f.text_field :postal_code, placeholder: "0000000" %>
  </div>
  <div class="form-group">
    <%= f.label :住所, class: "col-4" %>
    <%= f.text_field :address, class: "col-4", placeholder: "東京都渋谷区代々木神園町0-0" %>
  </div>
  <div class="form-group">
    <%= f.label :宛名, class: "col-4" %>
    <%= f.text_field :name, placeholder: "令和道子" %>
    <%= f.submit btn, class: "col-2 offset-2 btn-outline-info"%>
  </div>
<% end %>