
<% if addresses.enpty? %>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_address_path(address) %>
            <%= link_to "削除する", address_path(address), method: :delete, data: {confirm: "削除しますか？"}  %>
           </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
