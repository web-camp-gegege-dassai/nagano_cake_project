

<div class="container">
  <div class='row'>
    <h2>  商品一覧</h2> <h5>（全<%= @items.count %>件）</h5>
    <div class="col-lg-4">
     <% @items.each do |item| %>
         <%= link_to item_path(item.id) do %>
          <%= attachment_image_tag item, :image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg" %>
         <% end %>
         <p><%= item.name %></p>
         <p><%= tax_price(item.price).to_s(:delimited) %></p>
     <% end %>
    </div>
  </div>
  <div class='row'>
    <%= paginate @items %>
  </div>
</div>
   
   