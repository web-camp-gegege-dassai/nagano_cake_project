<div class="container">
  <div class='row mt-1 mb-3 ml-5 '>
    <h2 class="ml-5">商品一覧</h2>
    <div class="d-flex align-items-end">
      <h5>（全<%= @items.count %>件）</h5>
    </div>
  </div>

  <div class='row ml-5 mr-5'>
     <% @items.each do |item| %>
     <div class="col-lg-3">
         <%= link_to item_path(item.id) do %>
          <%= attachment_image_tag item, :image, size: "180x130", format: 'jpeg', fallback: "no_image.jpg" %>
         <% end %>
         <h6 class="mt-3"><%= item.name %></h6>
         <h6 class="mt-3 mb-3">¥<%= tax_price(item.price).to_s(:delimited) %></h6>
      </div>
     <% end %>
  </div>

  <div class='row mt-5'>
   <div class= "px-12 mx-auto">
    <%= paginate @items %>
   </div>
  </div>
</div>

