<div class="container">
  <div class='row'>
       <div class="col-lg-12">
          <th>マイページ</th>
        </div>
   </div>
    
  <div class='row'>
       <div class="col-lg-7">
        <td>登録情報</td>
        <td><%= link_to "編集する", customers_edit_path, class:"btn btn-success" %></td>
      </div>
   </div>
</div>

<div class="container">
  <div class='row'>
   <div class="col-lg-7">

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>氏名</th>
                    <td><%= @customer.last_name %><%= @customer.first_name%></td>
                </tr>
                <tr>
                    <th>カナ</th>
                    <td><%= @customer.last_name_kana%><%= @customer.first_name_kana%></td>
                </tr>
                 <tr>
                    <th>郵便番号</th>
                    <td><%= @customer.postal_code%></td>
                </tr>
                 <tr>
                    <th>住所</th>
                    <td><%= @customer.address%></td>
                </tr>
                 <tr>
                    <th>電話番号</th>
                    <td><%= @customer.telephone_number%></td>
                </tr>
                 <tr>
                    <th>メールアドレス</th>
                    <td><%= @customer.email%></td>
                </tr>
            </tbody>
        </table>
　　</div>
　</div>

  <div class='row'>
   <div class="col-lg-7">
    <td>配送先</td>
    <td><%= link_to "一覧を見る", addresses_path, class:"btn btn-primary" %></td>
   </div>
  </div>

  <div class='row'>
       <div class="col-lg-7">
        <td>注文履歴</td>
        <td><%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %></td>
      </div>
  </div>

</div>


