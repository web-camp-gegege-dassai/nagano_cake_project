<div class="container">
  <div class='row'>
    <div class="col-lg-12">
      <h1 class="mt-2 mb-3">マイページ</h1>
    </div>
   </div>
    
  <div class='row mb-3'>
   <div class="col-lg-1">
     登録情報
   </div>
   <div class="col-lg-2"> 
     <%= link_to "編集する", customers_edit_path, class:"btn btn-success" %>
   </div>
  </div>
</div>

<div class="container">
  <div class='row'>
   <div class="col-lg-7">
    <table class="table table-bordered">
     <tbody>
        <tr>
            <th>氏名</th>
            <td><%= @customer.last_name %><%= @customer.first_name%></td>
        </tr>
        <tr>
            <th>カナ</th>
            <td><%= @customer.last_name_kana%><%= @customer.first_name_kana%></td>
        </tr>
         <tr>
            <th>郵便番号</th>
            <td><%= @customer.postal_code%></td>
        </tr>
         <tr>
            <th>住所</th>
            <td><%= @customer.address%></td>
        </tr>
         <tr>
            <th>電話番号</th>
            <td><%= @customer.telephone_number%></td>
        </tr>
         <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email%></td>
        </tr>
     </tbody>
    </table>
　　</div>
　</div>

  <div class='row mb-3'>
    <div class="col-lg-1">
      配送先
    </div>
   <div class="col-lg-2">
    <%= link_to "一覧を見る", addresses_path, class:"btn btn-primary" %>
   </div>
  </div>

  <div class='row mb-3'>
     <div class="col-lg-1">
       注文履歴
     </div>
     <div class="col-lg-2">
       <td><%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %></td>
      </div>
   </div>

</div>


