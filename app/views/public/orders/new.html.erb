<h1>注文情報入力</h1>

<%= form_with model:@order, local: true do |f| %>

  <div class="method">
    <h2>支払い方法</h2>
    <%= f.radio_button :payment_method, :クレジットカード, checked: true %>
    <sapan>クレジットカード</sapan>
    <%= f.radio_button :payment_method, :銀行振り込み %>
    <sapn>銀行振り込み</sapn>
  </div>
  
  
  <div class="delivery_address">
    <h2>お届け先</h2>
    <div class="my_address">
      <%= f.radio_button :shipping_address, "my_address", checked: true %>ご自身の住所<br>
      &emsp;&emsp;〒<%= current_customer.postal_code} %>&nbsp;<%= current_customer.address %><br>
      &emsp;&emsp;<%= "#{current_customer.first_name} #{current_customer.last_name}" %>
    </div>
    
    
    <div class="registered_address">
      <% unless address == nil %>
        <% f.radio_button :shipping_address, "registered_address" %>登録済み住所から選択<br>
        &emps;&emps;<% f.collection_select(:address_id, @address, :id :order_address){prompt: '配送先住所を選択してください'}%>
      <% end %>
    </div>
    
    
    <div class="new_address">
      <%= f.fadio_button :shipping_address, "new_address" %> 新しいお届け先<br>
      <div class="form-group">
        <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
        <%= f.text_field :postal_code %>
      </div>
      <div class="form-group">
        <%= f.label :address, "住所" %>
        <%= f.text_field :address %>
      </div>
      <div class="form-group">
        <%= f.label :postal_code, "宛名" %>
        <%= f.text_field :postal_code %>
      </div>
    </div>
    
    <sapn><%= f.submit "確認画面へ" %></sapn>
  </div>
  
<% end %>