<div class='container pt-5'>
  <div class="row">
    <h3 class='col-12 offset-1 mb-5'>注文情報入力</h3>
    <div class="col-12">
      <%= form_with model:@order, local: true do |f| %>

        <h4 class="mb-3">支払い方法</h4>
        <div class="method offset-1">
          <%= f.radio_button :payment_method, :クレジットカード, checked: true %>
          <sapan>クレジットカード</sapan><br>
          <%= f.radio_button :payment_method, :銀行振り込み %>
          <sapn>銀行振り込み</sapn>
        </div>


        <h4 class="mb-3">お届け先</h4>
        <div class="delivery_address offset-1">
          <div class="my_address">
            <%= f.radio_button :shipping_address, "my_address", checked: true %>ご自身の住所<br>
            &emsp;&emsp;〒<%= current_customer.postal_code %>&nbsp;<%= current_customer.address %><br>
            &emsp;&emsp;<%= "#{current_customer.first_name} #{current_customer.last_name}" %>
          </div>


          <div class="registered_address">
            <% unless @address == nil %>
              <% f.radio_button :shipping_address, "registered_address" %>登録済み住所から選択<br>
              <div class="row">

              <span class="offset-1 col-11 mt-2 mb-2 form-control"><%= f.collection_select(:address_id, @address, :id, :order_address) %></span>
              </div>
            <% end %>
          </div>





          <div class="new_address">
            <%= f.radio_button :shipping_address, "new_address" %> 新しいお届け先<br>
            <div class="form-group">
              <%= f.label :postal_code, "郵便番号（ハイフンなし）", class: "col-2" %>
              <%= f.text_field :postal_code %>
            </div>
            <div class="form-group">
              <%= f.label :address, "住所", class: "col-2" %>
              <%= f.text_field :address, class: "col-7"%>
            </div>
            <div class="form-group">
              <%= f.label :postal_code, "宛名", class: "col-2" %>
              <%= f.text_field :postal_code %>
            </div>
          </div>

          <sapn class" col-2 offset-5"><%= f.submit "確認画面へ進む", class: "btn btn-primary" %></sapn>
        </div>

      <% end %>
    </div>
  </div>
</div>