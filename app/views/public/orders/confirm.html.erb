
<h2>注文情報確認画面</h2>

<div class="order-items">

  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
    </thead>

    <tbody>
      <%= @cart_items.each do |cart_item|%>
        <tr>
          <td>
            <%= attachment_image_tag( cart.item, :image, size: "60x50")%><br>
            <%= cart_item.item %>
          </td>
          <!--単価（税込）-->
          <td></td>
          <td>cart_item.amount</td>
          <!--小計-->
          <td></td>
        </tr>
      <% end %> 
    </tbody>

  </table>

</div>

<div class="shipping">
  <table>
    <thead>
      <tr>
        <th>送料</th>
        <th><%= @order.shipping_cost %></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td>商品合計</td>
        <td><%= table_price(@cart_items)%></td>
      </tr>
      <tr>
        <td>請求金額</td>
        <td><%=  %></td>
      </tr>
    </tbody>
  </table>
</div>


<div class="row">
  <h4>支払い方法</h4>
  <p><%= @order.payment_method %></p>
</div>


<div class="row">
  <h4>お届け先</h4>
  <p>
    <%= "#{@order.postal_code} #{@order.address}" %><br>
    <%= @order.name %>
  </p>
</div>

<div class="row">
  <%= form_with model: @order, local:true do |f| %>
  <%= f.hidden_field :postal_code %>
  <%= f.hidden_field :address %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :payment_method %>
  <%= f.hidden_field :total_price %>
  <%= f.submit '注文を確定する' %>
  <% end %>
</div>