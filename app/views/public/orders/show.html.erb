<div class="container">
  <div class="row">
    <h3 class='col-3 mb-5 mx-auto text-center bg-secondary text-white'>注文履歴詳細</h3>
  </div>
  <div class="row border-top border-primary pt-3">
    <div class="col-8">
      <h4>注文情報</h4>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>
              <%= @order.postal_code %><br>
              <%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th>支払い方法</th>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= @order.status %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-4">
      <h4>請求情報</h4>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>商品合計</th>
            <td><%= total_price(@order_details).to_s(:delimited) %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><%= @order.shipping_cost %></td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td><%= @order.total_payment.to_s(:delimited) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row border-bottom border-primary pb-3">
    <div class="col-10">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= tax_price(order_detail.item.price) %></td>
              <td><%= order_detail.amount %></td>
              <td><%= sub_price(order_detail).to_s(:delimited) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>