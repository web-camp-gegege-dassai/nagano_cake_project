<div class="container">
  <div class="row">
    <h3 class='col-3 mb-5 mx-auto text-center bg-secondary text-white'>注文履歴詳細</h3>
  </div>
  <div class="row">
    <h4>注文情報</h4>
    <table>
      <tbody>
        <tr>
          <th>注文日</th>
          <tb><%= @order.created_at.strftime('%Y/%m/%d') %></tb>
        </tr>
        <tr>
          <th>配送先</th>
          <tb>
            <%= @order.postal_code %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </tb>
        </tr>
        <tr>
          <th>支払い方法</th>
          <tb><%= @order.payment_method %></tb>
        </tr>
        <tr>
          <th>ステータス</th>
          <tb><% @order.status %></tb>
        </tr>
      </tbody>
    </table>


    <h4>請求情報</h4>
    <table>
      <tbody>
        <tr>
          <th>商品合計</th>
          <tb><%= total_price(@order_details) %></tb>
        </tr>
        <th>配送料</th>
        <tb><% @order.shipping_cost %></tb>
        <th>ご請求額</th>
        <tb><%= @order.total_payment %></tb>
      </tbody>

    </table>
  </div>

  <div class="row">
    <table>
      <thead>
        <tr>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= tax_price(order_detail.item.price) %></td>
            <td><%= order_detail.amount %></td>
            <td><%= sub_price(order_detail) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>