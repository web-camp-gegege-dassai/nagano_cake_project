<div class="container">
  <h4 class="m-5 px-5 w-25 text-center font-weight-bold">新着商品</h4>
  <div class="row">
    <% @items.last(4).reverse_each do |item| %>
      <div class="col-3">
        <%= link_to item_path(item.id) do %>
          <%= attachment_image_tag item, :image, size: "200x150", format:"jpeg", class: "mt-3" %>
        <% end %><br>
          <div class="mt-2"><%= item.name %></div><br>
          <div class="my-2">¥<%= item.price.to_s(:delimited, delimiter: ',') %></div>
        <%= attachment_image_tag item, :image, :fill, 60, 30, format:"jpeg" %><br>
        <%= item.name %><br>
        <%= item.price %>
      </div>
    <% end %>
  </div>
</div>

<div class="text-right w-75 mt-3">
  <u><%= link_to "全ての商品を見る>", items_path %></u>
</div>